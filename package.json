{
  "name": "next-translate-plugin",
  "version": "2.6.0",
  "description": "Tiny and powerful i18n plugin to translate your Next.js pages.",
  "license": "MIT",
  "keywords": [
    "react",
    "preact",
    "i18n",
    "nextjs",
    "next.js",
    "next",
    "plugin",
    "translate",
    "translation",
    "internationalization",
    "locale",
    "locales",
    "globalization"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aralroca/next-translate-plugin.git"
  },
  "author": {
    "name": "Aral Roca GÃ²mez",
    "email": "contact@aralroca.com"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/esm/index.js",
  "types": "./index.d.ts",
  "files": [
    "lib",
    "index*",
    "loader*",
    "template*",
    "types*",
    "utils*",
    "postinstall-message.js"
  ],
  "scripts": {
    "build": "tsup --cjsInterop --clean --dts --sourcemap --out-dir lib --format cjs,esm src/index.ts",
    "format": "pretty-quick",
    "husky": "pretty-quick --staged && yarn test",
    "prepare": "husky install",
    "prepublish": "yarn test && yarn build",
    "test": "cross-env NODE_ENV=test jest --env=jsdom",
    "test:coverage": "cross-env NODE_ENV=test jest --env=jsdom --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --env=jsdom --watch",
    "postinstall": "node ./postinstall-message.js"
  },
  "devDependencies": {
    "@swc/core": "^1.3.90",
    "@swc/jest": "^0.2.29",
    "@types/jest": "29.2.6",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/webpack": "5.28.0",
    "cross-env": "7.0.3",
    "husky": "7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "13.1.2",
    "next-translate": "2.4.0",
    "prettier": "2.8.3",
    "pretty-quick": "3.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "supertest": "6.3.3",
    "tsup": "^7.2.0",
    "typescript": "4.5.2"
  },
  "peerDependencies": {
    "next-translate": ">= 2.4.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".utils.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  }
}
